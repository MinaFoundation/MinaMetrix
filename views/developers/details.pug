extends ../partials/navbar
block main
  .general-header-wrapper
    .general-header-text-wrapper
      .general-header-title Developer Details - #{developer.login}
      .general-header-subtitle See the details.
    input.general-header-search-input#developer-search-input(autocomplete='search' name='new-password' placeholder='Search by name' value='')
  - console.log(developer)
  .all-content-inner-wrapper
    .general-details-wrapper
      span.general-details-title General Information
      .general-details-seperator
      .general-details-info-grid-wrapper(style='grid-template-columns: 1fr 1fr 2fr;')
        .general-details-info-grid-each-item-wrapper
          span.general-details-subtitle Username
          .general-details-info= developer.login
        .general-details-info-grid-each-item-wrapper
          span.general-details-subtitle ID
          .general-details-info= developer.github_id
        .general-details-info-grid-each-item-wrapper
          span.general-details-subtitle URL
          a.general-details-info(href=`https://github.com/${developer.login}` target='_blank') #{`https://github.com/${developer.login}`}
        .general-details-info-grid-each-item-wrapper
          span.general-details-subtitle Type
          .general-details-info= developer.type
        .general-details-info-grid-each-item-wrapper
          span.general-details-subtitle Site Admin
          .general-details-info= developer.site_admin ? 'Yes' : 'No'
        .general-details-info-grid-each-item-wrapper
          span.general-details-subtitle Node ID
          .general-details-info= developer.node_id
        .general-details-info-grid-each-item-wrapper
          span.general-details-subtitle Gravatar ID
          .general-details-info= developer.gravatar_id
      span.general-details-title URLs
      .general-details-seperator
      .general-details-info-grid-wrapper(style='grid-template-columns: 1fr;')
        .general-details-info-grid-each-item-wrapper
          span.general-details-subtitle API URL
          a.general-details-info(target='_blank' href=developer.url) #{developer.url}
        .general-details-info-grid-each-item-wrapper
          span.general-details-subtitle Avatar URL
          a.general-details-info(target='_blank' href=developer.avatar_url) #{developer.avatar_url}
        .general-details-info-grid-each-item-wrapper
          span.general-details-subtitle Followers URL
          a.general-details-info(target='_blank' href=developer.other_urls.followers_url) #{developer.other_urls.followers_url}
        .general-details-info-grid-each-item-wrapper
          span.general-details-subtitle Following URL
          a.general-details-info(target='_blank' href=developer.other_urls.following_url) #{developer.other_urls.following_url}
        .general-details-info-grid-each-item-wrapper
          span.general-details-subtitle Gists URL
          a.general-details-info(target='_blank' href=developer.other_urls.gists_url) #{developer.other_urls.gists_url}
        .general-details-info-grid-each-item-wrapper
          span.general-details-subtitle Starred URL
          a.general-details-info(target='_blank' href=developer.other_urls.starred_url) #{developer.other_urls.starred_url}
        .general-details-info-grid-each-item-wrapper
          span.general-details-subtitle Subscriptions URL
          a.general-details-info(target='_blank' href=developer.other_urls.subscriptions_url) #{developer.other_urls.subscriptions_url}
        .general-details-info-grid-each-item-wrapper
          span.general-details-subtitle Organizations URL
          a.general-details-info(target='_blank' href=developer.other_urls.organizations_url) #{developer.other_urls.organizations_url}
        .general-details-info-grid-each-item-wrapper
          span.general-details-subtitle Repos URL
          a.general-details-info(target='_blank' href=developer.other_urls.repos_url) #{developer.other_urls.repos_url}
        .general-details-info-grid-each-item-wrapper
          span.general-details-subtitle Events URL
          a.general-details-info(target='_blank' href=developer.other_urls.events_url) #{developer.other_urls.events_url}
        .general-details-info-grid-each-item-wrapper
          span.general-details-subtitle Received Events URL
          a.general-details-info(target='_blank' href=developer.other_urls.received_events_url) #{developer.other_urls.received_events_url}